@model NoteViewModels.Edit

<form method="post" asp-action="Edit" class="container mt-3">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="d-flex gap-2">
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Back</a>
        <input type="submit" value="Update" class="btn btn-success"/>
    </div>

    <input type="hidden" asp-for="Id"/>

    <div class="mt-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div class="mt-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" rows="40"></textarea>
    </div>
</form>