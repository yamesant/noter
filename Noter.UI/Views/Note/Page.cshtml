@model NoteViewModels.Paginated

@if (Model.NotePreviews.Count > 0)
{
    <a asp-action="Create">Create New</a>

    @if (Model.HasPreviousPage)
    {
        <a asp-action="Page" asp-route-pageNumber="@(Model.PageNumber-1)">Previous Page</a>
    }
    @if (Model.HasNextPage)
    {
        <a asp-action="Page" asp-route-pageNumber="@(Model.PageNumber+1)">Next Page</a>
    }

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content Preview</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        @foreach (NoteViewModels.Preview note in Model.NotePreviews)
        {
            <tr>
                <td>@note.Id</td>
                <td>@note.Title</td>
                <td>@note.ContentPreview</td>
                <td>
                    <a asp-action="Details" asp-route-id="@note.Id">Details</a>
                    <a asp-action="Edit" asp-route-id="@note.Id">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No results</p>
}